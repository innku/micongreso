<% title "Assistances" %>

<table>
  <tr>
    <th>Justified</th>
    <th>Justification</th>
  </tr>
  <% for assistance in @assistances %>
    <tr>
      <td><%=h assistance.justified %></td>
      <td><%=h assistance.justification %></td>
      <td><%= link_to "Show", assistance %></td>
      <td><%= link_to "Edit", edit_assistance_path(assistance) %></td>
      <td><%= link_to "Destroy", assistance, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Assistance", new_assistance_path %></p>
