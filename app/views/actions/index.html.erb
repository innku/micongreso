<%= render :partial => "bills/toolbar" %>

<div class="section s-70">
  <div class="box big-header">
    <h1><%= @bill.name %></h1>
    
    <div id="tabs">
      <ul>
        <li><%= link_to "Propuesta", @bill %></li>
        <li><%= link_to "Actividad", bill_actions_path(@bill), :class => "active" %></li>
        <li><%= link_to "Comentarios", bill_comments_path(@bill) %></li>
      </ul>
    </div>
    
    <div class="boxin">
      <div class="content">
        <table width="100%">
          <tr>
            <th width="120px">Tipo</th>
            <th width="150px">Fecha</th>
            <th>Texto</th>
          </tr>

        <% @actions.each do |action| %>
          <tr>
            <td><%= t("."+action.action_type) %></td>
            <td><%= l action.date, :format => :long %></td>
            <td><%= action.text %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="section s-30">
  <div class="sidebar">
    <div class="content padded">
      <%= render :partial => "bills/sidebar" %>
    </div>
  </div>
</div>
