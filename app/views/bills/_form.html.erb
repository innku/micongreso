  <%= f.error_messages %>
  <p>
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description, "DescripciÃ³n" %><br />
    <%= f.text_area :description, :rows => 4, :cols => 60 %>
  </p>
  <p>
    <%= f.label :date, "Fecha" %>
		<%= f.text_field :formatted_date, :class => "input_text datepicker", :id => "datepicker" %>
