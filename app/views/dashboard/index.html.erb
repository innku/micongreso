<% content_for :body_class do -%>
	class="dashboard"
<% end -%>

<div class="left">
	<% for bill in @bills %>
		<div class="bills">
			<h4><%= link_to bill.name, bill %></h4>
			<p><%= bill.date.to_s(:short) %>, <% if bill.general_votes? %>Votaciones: Favor: <%= bill.member_votes_for %> Contra: <%= bill.member_votes_against %> Abstención: <%= bill.member_votes_neutral %><% end %></p>
			<p>Ciudadanos: Favor: <%= bill.citizen_votes(true) %>, Contra: <%= bill.citizen_votes(false) %></p>
			<% if current_user %>
  			<div id="bill_<%= bill.id %>">
    			<% if current_user.voted_on?(bill) %>
    			  Votaste: <%= display_vote(current_user.vote_choice(bill)) %>
    			<% else %>
    			  <%= link_to "Vota a favor", bill_votes_path(bill), :class => "vote", 'data-vote' => 1, 'data-voteable' => "bill" %> 
    			  <%= link_to "Vota en contra", bill_votes_path(bill), :class => "vote", 'data-vote' => 0, 'data-voteable' => "bill" %>
    			  <%= link_to "Abstención", bill_votes_path(bill), :class => "vote", 'data-vote' => -1, 'data-voteable' => "bill" %>
    			<% end %>
  			</div>
			<% end %>
			<div>Tags: <%= bill.tag_list %>, Visitas: <%= bill.total_views %></div>
		</div>
	<% end %>
	
	
	<h2>Encuentra tu diputado</h2>
	<% form_tag districts_path, :method => :get do %>
	  <p>
	    <%= label_tag :state_id, "Estado" %>
	    <%= select_tag :state_id, options_for_select(State.all.map {|s| [s.name, s.id]}, :selected => params[:state_id].to_i) %>
	  </p>
	  <p>
	    <%= label_tag :section %>
	    <%= text_field_tag :section %>
	  </p>
	  <p><%= submit_tag "Buscar" %></p>
	<% end %>
</div>

<div class="right">
	<% for news in @news %>
		<div class="news">
			<div class="title">
				<h3><%= link_to news.title, news %></h3>
				<span><%=h news.date %></span>
				<% if admin?(current_user) %>
					<span><%= link_to "Edit", edit_news_path(news) %></span>
				<% end %>
				<p>Votos: Favor: <%= news.citizen_votes(true) %>, Contra: <%= news.citizen_votes(false) %></p>
				<% if current_user %>
    			<div id="news_<%= news.id %>">
      			<% if current_user.voted_on?(news) %>
      			  Votaste: <%= current_user.vote_choice(news) %>
      			<% else %>
      			  <%= link_to "Vota a favor", news_votes_path(news), :class => "vote", 'data-vote' => 1, 'data-voteable' => "news" %> 
      			  <%= link_to "Vota en contra", news_votes_path(news), :class => "vote", 'data-vote' => 0, 'data-voteable' => "news" %>
      			<% end %>
    			</div>
  			<% end %>
			</div>

			<p><%=h news.abstract %></p>
			<% unless news.tag_list.empty? %>
				<p>Tags: <%= news.tag_list.join(', ') %></p>
			<% end %>
		</div>
	<% end %>
</div>

<div class="clear">
	
</div>

<div id="parties">
	<h4>Partidos</h4>
	
	<%= Party.all.collect {|party| link_to party.name, group_search_members_path(:party_id => party.id )}.join(', ')  %>
</div>