<% content_for :title do -%>
  <%= truncate(@news.title, :length => 60) %>
<% end -%>

<%= render :partial => "toolbar" %>

<div id="rest">
  <h2 class="section">Noticias</h2>
  
  <div class="left">
    <div class="propuestas">
      <div id="interna" class="propuesta">
        <h1><%= @news.title %></h1>
        
        <% if current_user %>
        	<div id="news_<%= @news.id %>" class="like">
        		<%= link_to_like(@news, current_user) %>
        	</div>
        <% end %>
        
        <% if @news.tags.any? %>
          <ul class="tags">
            <% @news.tags.each do |tag| %>
              <li><%= tag.name %></li>
            <% end %>
          </ul>
        <% end %>
        
        <% if @news.photo? %>
          <div class="main_image"><%= image_tag(@news.photo.url(:medium)) %></div>
        <% end %>
        
        <p><%=raw @news.body %></p>
        
        <%= render :partial => "comments/comments", :locals => {:commentable => @news} %>
      </div>
    </div>
  </div>
  
  <div class="right">
    <div id="lateral" class="refinador">
      <h1>Busca noticias</h1>
      
      <%= form_tag news_index_path, :method => :get do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
        </p>
        <p>
          <%= submit_tag "Buscar", :class => "action" %>
        </p>
      <% end %>
    </div>
    
    <div id="noticias">
			<h2>Noticias Relacionadas</h2>
			<ul class="list">
			  <% @related_news.each do |news| %>
  				<li>
  					<%= image_tag(news.photo.url(:thumb)) %>
  					<h3><%= link_to truncate(news.title, :length => 75), news %></h3>
  				</li>
  			<% end %>
			</ul>
		</div>
  </div>
</div>




