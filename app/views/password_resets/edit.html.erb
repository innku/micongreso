<div id="rest">
  <h2 class="section">Nueva Contraseña</h2>
  
  <div class="left">
    <div class="propuestas">
      <div id="interna" class="propuesta cien">
        <%= form_for @user, :url => password_reset_path(@user.perishable_token) do |f| %>
					<% if @user.errors.any? %>
					  <div id="errorExplanation">
					    <h2>Encontramos errores al cambiar tu contraseña</h2>
							<ul>
								<% @user.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
					  </div>
					<% end %>

					<div class="msg info">
						<p>Ingresa tu nueva contraseña.</p>
					</div>
					<p>
						<%= f.label :password, "Nueva contraseña" %><br />
						<%= f.password_field :password, :class => "input" %>
					</p>

					<p>
						<%= f.label :password_confirmation, "Confirma la nueva contraseña" %><br />
						<%= f.password_field :password_confirmation, :class => "input" %>
					</p>

				  <%= f.submit "Cambiar contraseña", :class => "action" %>
				<% end %>
      </div>
    </div>
  </div>
  <div class="right"></div>
</div>


