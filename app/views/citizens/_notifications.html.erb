<% form_for @citizen, :url => citizen_path(@citizen) do |f| %>
  <% f.error_messages %>
  
  <% f.fields_for :notification do |n| %>
    <p>
      <%= n.label :email, "Correo Electrónico" %>
      <%= n.radio_button :email, true %> <%= n.label :email_true, "Si" %>
      <%= n.radio_button :email, true %> <%= n.label :email_false, "No" %>
    </p>
    <p>
      <%= n.label :twitter %>
      <%= n.radio_button :twitter, true %> <%= n.label :twitter_true, "Si" %>
      <%= n.radio_button :twitter, true %> <%= n.label :twitter_false, "No" %>
    </p>
    <p>
      <%= n.label :facebook %>
      <%= n.radio_button :facebook, true %> <%= n.label :facebook_true, "Si" %>
      <%= n.radio_button :facebook, true %> <%= n.label :facebook_false, "No" %>
    </p>
    <p>
      <%= n.label :sms %>
      <%= n.radio_button :sms, true %> <%= n.label :sms_true, "Si" %>
      <%= n.radio_button :sms, true %> <%= n.label :sms_false, "No" %>
    </p>
    <p>
      <%= n.label :interest_topics, "Recibir notificaciones de:" %>
      <%= n.radio_button :interest_topics, false %> <%= n.label :interest_topics_false, "Todos los temas" %>
      <%= n.radio_button :interest_topics, true %> <%= n.label :interest_topics_true, "Mis temas de interés" %>
    </p>
  <% end %>
  
  <h3>Temas de Interés</h3>
  <p>Selecciona tus temas de interés</p>
  
  <ul id="tag_ids">
    <% Tag.all.each do |tag| %>
      <li>
        <%= link_to tag.name, "#{tag.id}", :class => "#{tag_classes(@citizen, tag)}" %>
        <%= hidden_field_tag "user[tag_ids][]", tag.id, :disabled => !@citizen.tags.include?(tag) %>
      </li>
    <% end %>
  </ul>
  
  <p>
    <%= hidden_field_tag :tab, 2 %>
    <%= f.submit "Guardar Preferencias" %>
  </p>
<% end %>