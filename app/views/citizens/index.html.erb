<% title "Citizens" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for citizen in @citizens %>
    <tr>
      <td><%=h citizen.name %></td>
      <td><%= link_to "Show", citizen %></td>
      <td><%= link_to "Edit", edit_citizen_path(citizen) %></td>
      <td><%= link_to "Destroy", citizen, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Citizen", new_citizen_path %></p>
