<% title("Usuarios") %>

<%= link_to "Usuarios", admin_users_path %>
<%= link_to "Ciudadanos", admin_users_path(:role => "citizen") %>

<table>
	<tr>
		<th>Nombre</th>
		<th>Correo</th>
		<th></th>
	</tr>
	<% for user in @users %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<th><%= link_to "Editar", edit_admin_user_path(user) %></th>
		</tr>
	<% end %>
</table>

<%= link_to "Nuevo Usuario", new_admin_user_path %>
