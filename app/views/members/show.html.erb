<%= content_for :toolbar do -%>
  <% if can? :manage, Member %>
    <div id="toolbar">
  	  <%= link_to "Editar", edit_member_path(@member) %> |
  	  <%= link_to "Regresar a diputados", members_path %> |
  		<%= link_to "Mensajes a diputado", member_messages_path(@member) %>
  		<%= link_to "Eliminar", @member, :method => :delete, :confirm => "¿Estás seguro que lo deseas eliminar?" %>
    </div>
  <% end %>
<% end -%>

<% content_for :title do -%>
  <%= @member.name %>
<% end -%>

<div class="section s-70">
  <div class="box big-header">
    <div class="dipufoto">
      <div class="partido"><%= image_tag(@member.party.abbr.downcase+".png", :height => 30, :width => 30) %></div>
      <%= image_tag(@member.picture.url(:thumb)) %>
    </div>
    <h1 class="slim"><%= @member.name %></h1>
    <ul class="details">
      <li><%=h @member.party.abbr %> | </li>
      <li><%=h @member.state_name %> |</li>
      <li><%=h @member.election %></li>
    </ul>
    
    <h5>Suplente</h5>
    <h5><%=h @member.substitute %></h5>
    
    <div class="boxin">
      <div class="content">
        
        <div id="votaciones">
        	<h3>Últimas votaciones</h3>
        	<table class="resultados" cellspacing="0" cellpadding="0" border="0" width="100%">
        	  <tr>
              <th>Propuesta</th>
              <th width="120">Fecha</th>
              <th width="70">Voto</th>
        	  </tr>
        	  <% @votes.each do |vote| %>
        	    <tr>
          	    <td><%= link_to(truncate(vote.voteable.name, :length => 80), vote.voteable) %></td>
          	    <td><%= l vote.created_at.to_date, :format => :short %></td> 
          	    <td><span class="<%= member_vote_class(vote).downcase %>"><%= member_vote(vote) %></span></td>
        	    </tr>
          	<% end %>
        	</table>
        </div>
        
        <div id="assistances">
          <p class="faltas">
            <strong>Asistencias:</strong> <%= @member.assistances.present.count %> de <%= @member.assistances.count %> (Faltas <%= number_to_percentage((@member.absences.count.to_f/@member.assistances.count.to_f)*100, :precision => 0) %>)
          </p>
        </div>
        
        <%= render :partial => "members/comment_form" %>
        
      </div>
    </div>
  </div>
</div>

<div class="section s-30">
	<div class="sidebar">
		<div class="content padded">
		  <%= render :partial => "members/sidebar" %>
		</div>
  </div>
</div>
