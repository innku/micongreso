<%= form_for @search_member do |f| %>
  <%= render "layouts/error_messages", :target => @search_member %>
  <p>
    <%= f.label :name, "Nombre" %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :party_id, "Partido" %><br/>
    <%= f.collection_select :party_id, @parties, :id_as_string, :name, {:include_blank => "Todos"} %>
  </p>
  <p>
    <%= f.label :state_id, "Entidad" %><br/>
    <%= f.collection_select :state_id, @states, :id_as_string, :name, {:include_blank => "Todos"} %>
  </p>
  <p><%= f.submit "Buscar", :class => "action" %></p>
<% end %>
